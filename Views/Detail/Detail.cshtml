                <button class="edit">
                    <i class="fa-solid fa-pen"></i>
                    <span class="title">Edit</span>
                </button>
            </a>
        </div>
        <div class="wrap">
            <h3>Name</h3> <br>
            <div class="content" id="productName">

            </div>

            <h3 class="h3Name">Description</h3><br>
            <div class="content" id="productDetails">

            </div>

        </div>
    </div>

    <script src="~/js/Detail.js"></script>
