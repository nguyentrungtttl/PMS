<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - My .NET Core App</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <link rel="stylesheet" href="~/css/Home.css" />
    <script src="https://momentjs.com/downloads/moment-with-locales.min.js"></script>
</head>

<body>
    @* ======= Sidebav ======= *@
    <div class="container">
        <div class="navigation">
            <div>
                <ul>
                    <li>
                        <img src="~/images/logoPMS.png" alt="">
                    </li>
                    <li>
                        <a href="">
                            <span class="icon"> <i class="fa-solid fa-dollar-sign"></i> </span>
                            <span class="title">Rate plan</span>
                        </a>
                    </li>
                    <li>
                        <a href="/login" onclick="confirmLogout(event)">
                            <span class="icon"><i class="fa-solid fa-arrow-right-from-bracket"></i></span>
                            <span class="title">Log out</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="main">
        @* ==== Top Header ======= *@
        <div class="topbar">
            <div class="search">
                <label>
                    <input type="text" placeholder="Search here">
                    <i class="fa-solid fa-magnifying-glass"></i>
                </label>
            </div>
            <div class="user">
                <img src="~/images/customer02.jpg" alt="">
            </div>
        </div>
        <div class="createRate">
            <a href="/createForm">
                <button>
                    <i class="fa-solid fa-plus"></i>
                    <span class="title">New Rate plan</span>
                </button>
            </a>
        </div>
        <div class="filterBtn">
            <button onclick="filter()">
                <i class="fa-solid fa-filter"></i>
                <span class="title">Filter</span>
            </button>
        </div>
        <div class="modal-background" id="modalBackground"></div>
        <div class="filter" id="filter">
            <form class="filterForm">
                <div class="dropdown">
                    <ul>
                        <div class="option">
                            <label for="channelName">Channel</label>
                        </div>
                        <div class="content">
                            <li>
                                <div>
                                    <select id="channelName" name="channelName">
                                        <option value="OTAs">OTAs</option>
                                        <option value="TA">TA</option>
                                    </select>
                                </div>
                            </li>
                        </div>
                        <div class="option">
                            <label for="">Room type</label>
                        </div>
                        <li>
                            <div>
                                <input type="checkbox" id="checkbox1" name="roomType" value="Standard">
                                <label for="checkbox1">Standard</label><br>
                                <input type="checkbox" id="checkbox2" name="roomType" value="Superior">
                                <label for="checkbox2">Superior </label><br>
                                <input type="checkbox" id="checkbox3" name="roomType" value="Deluxe">
                                <label for="checkbox3">Deluxe</label><br>
                                <input type="checkbox" id="checkbox3" name="roomType" value="Luxury">
                                <label for="checkbox3">Luxury</label><br>
                            </div>
                        </li>
                        <div class="option">
                            <label for="dateStart">Time applied</label>
                        </div>
                        <li>
                            <div>
                                <label for="dateStart">Date start</label>
                                <input type="date" id="dateStart" name="timeAppliedStart"><br><br>
                                <label for="dateEnd">Date end</label>
                                <input type="date" id="dateEnd" name="timeAppliedEnd">
                            </div>
                        </li>
                        <div class="option">
                            <label for="">Status</label>
                        </div>
                        <li>
                            <div>
                                <input type="radio" name="status" value="Active">
                                <label for="statusActive">Active</label><br>
                                <input type="radio" name="status" value="Inactive">
                                <label for="statusInactive">Inactive</label><br>
                            </div>
                        </li>
                    </ul>
                </div>
                <button type="submit">Apply</button>
            </form>


        </div>
        @* ====== Table of rate plan ===== *@
        <div class="details">
            <div class="recentOrders">
                <div class="cardHeader">
                    <h2>All Rate plans</h2>
                </div>




                <table id="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Room type</th>
                            <th>Status</th>
                            <th>Time applied</th>
                        </tr>
                    </thead>


                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>




    </div>
    @* ==== Script ==== *@
    <script src="~/js/Home.js"></script>
</body>


</html>
